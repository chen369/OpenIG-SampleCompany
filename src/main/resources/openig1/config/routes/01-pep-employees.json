{
  "baseURI": "http://employees.sc.com:8002/employeeApp",
  "handler": {
    "type": "DispatchHandler",
    "config": {
      "bindings": [
        {
          "comment": "Redirect to OpenAM authentication",
          "name": "OpenAM Authentication",
          "condition": "${request.cookies['iPlanetDirectoryPro'] == null}",
          "handler": {
            "type": "StaticResponseHandler",
            "config": {
              "status": 302,
              "reason": "Found",
              "headers": {
                "Location": [
                  "http://openam13.sc.com:8080/openam/XUI/#login/employees&goto=${urlEncode(contexts.router.originalUri)}"
                ]
              },
              "entity": "Redirecting to OpenAM for authentication..."
            },
            "capture": "all"
          }
        },
        {
          "condition": "${request.cookies['iPlanetDirectoryPro'] != null}",
          "handler": {
            "comment": "OpenAM Authorization chain for policy validation and attributes retrieval",
            "name": "OpenAM Authorization Chain",
            "type": "Chain",
            "config": {
              "filters": [
                {
                  "name": "Access Denied",
                  "type": "SwitchFilter",
                  "config": {
                    "onResponse": [
                      {
                        "condition": "${response.status.code == 401}",
                        "handler": {
                          "type": "StaticResponseHandler",
                          "config": {
                            "status": 302,
                            "reason": "Found",
                            "headers": {
                              "Location": [
                                "http://employees-ig.sc.com:9000/employeeApp/accessDenied.html"
                              ]
                            }
                          },
                          "capture": "all"
                        }
                      }
                    ]
                  },
                  "capture": "all"
                },
                {
                  "comment": "OpenAM Authorization check filter",
                  "name": "OpenAM Authorization",
                  "type": "PolicyEnforcementFilter",
                  "config": {
                    "openamUrl": "http://openam13.sc.com:8080/openam",
                    "pepUsername": "policyAdmin",
                    "pepPassword": "password",
                    "realm": "employees",
                    "application": "OpenIG1",
                    "ssoTokenSubject": "${request.cookies['iPlanetDirectoryPro'][0].value}"
                  },
                  "capture": "all"
                },
                {
                  "comment": "Custom filter for retrieving user's attributes and setting as HTTP headers",
                  "name": "OpenAM Attributes",
                  "type": "ScriptableFilter",
                  "config": {
                    "type": "application/x-groovy",
                    "file": "OpenAMAttributes.groovy",
                    "args": {
                      "profileAttributes": "uid mail",
                      "openamUrl": "http://openam13.sc.com:8080/openam/json/employees/"
                    }
                  },
                  "capture": "all"
                }
              ],
              "handler": "ClientHandler"
            }
          }
        }
      ]
    }
  },
  "condition": "${matches(request.uri.path, '^/employeeApp') and not contains(request.uri.path, 'logout.html') and not contains(request.uri.path, 'accessDenied.html') and not contains(request.uri.path, '.ico') and not contains(request.uri.path, '.js') and not contains(request.uri.path, '.css') and not contains(request.uri.path, '.jpg')}"
}